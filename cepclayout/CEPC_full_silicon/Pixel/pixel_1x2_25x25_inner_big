chipThickness 0.0

deadAreaExtraLength 0.0    // mass is correctly set up. Shorter length (0.09 mm instead of 0.5 mm) is only to avoid overlaps in old geometries.
deadAreaExtraWidth 0.0
chipNegativeXExtraWidth 0.0   
chipPositiveXExtraWidth 1.0

Sensor 1 {
  sensorType pixel
  pitchEstimate 0.025
  stripLengthEstimate 0.025
  numROCX 512
  numROCY 1024
  powerPerChannel 0.0 // mW
}

plotColor 4  // green
